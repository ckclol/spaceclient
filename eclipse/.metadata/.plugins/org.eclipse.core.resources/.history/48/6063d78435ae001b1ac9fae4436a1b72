package space.hud;

import net.minecraft.client.Minecraft;
import net.minecraft.client.gui.ScaledResolution;

public class ScreenPos {
	
	private static final Minecraft mc = Minecraft.getMinecraft();
	ScaledResolution r = new ScaledResolution(mc);
	private double x ,y;
	
	public ScreenPos(double x, double y) {
		setRelative(x, y);
	}
	
	private void setRelative(double x, double y) {
		this.x = x;
		this.y = y;
	}
	
	public static ScreenPos fromRelativePosition(double x, double y) {
		return new ScreenPos(x, y);
	}
	
	public static ScreenPos fromAbsolutePosition(int x, int y) {
		return new ScreenPos(x, y);
	}

	public ScreenPos(int x, int y) {
		setAbsolute(x, y);
	}

	private void setAbsolute(int x, int y) {
		this.x = (double) x / r.getScaledWidth();
		this.y = (double) y / r,
	}
	
	public int getAbsoluteX() {
		return (int) (x * r.getScaledWidth());
	}
	
	public int getAbsoluteY() {
		return (int) (y * r.getScaledHeight());
	}
	
	public double getRelativeX() {
		return x;
	}
	
	public double getRelativey() {
		return y;
	}
	
}
